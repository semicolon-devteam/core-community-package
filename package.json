{
  "name": "@team-semicolon/community-core",
  "version": "2.2.1",
  "type": "module",
  "description": "Next.js 커뮤니티 플랫폼을 위한 공통 기능 패키지 - 훅, 유틸리티, 서비스 레이어",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "require": "./dist/hooks/index.js",
      "import": "./dist/hooks/index.esm.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./hooks/auth": {
      "require": "./dist/hooks/auth/index.js",
      "import": "./dist/hooks/auth/index.esm.js",
      "types": "./dist/hooks/auth/index.d.ts"
    },
    "./utils": {
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.esm.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./types": {
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.esm.js",
      "types": "./dist/types/index.d.ts"
    },
    "./constants": {
      "require": "./dist/constants/index.js",
      "import": "./dist/constants/index.esm.js",
      "types": "./dist/constants/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:lib",
    "build:lib": "rollup -c",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "type-check": "tsc --project tsconfig.package.json --noEmit",
    "dev": "rollup -c -w",
    "deploy": "npm publish --access public",
    "version:bump": "./scripts/version-bump.sh",
    "release": "npm run build && npm run test && npm run version:bump",
    "release:ci": "semantic-release",
    "mcp:setup": "./scripts/setup-github-mcp.sh",
    "mcp:check": "echo 'GitHub MCP 설정 상태:' && ls -la .mcp.json .env.mcp 2>/dev/null || echo '설정 파일을 확인할 수 없습니다.'"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.48.1",
    "@tanstack/react-query": "^5.69.0",
    "axios": "^1.8.1",
    "zustand": "^4.5.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/lodash": "^4.17.15",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rollup": "^4.47.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semicolon-devteam/community-core.git"
  },
  "keywords": [
    "react",
    "nextjs",
    "react",
    "nextjs",
    "community",
    "hooks",
    "supabase",
    "realtime",
    "authentication",
    "zustand",
    "typescript"
  ],
  "author": "Team Semicolon",
  "license": "MIT"
}
